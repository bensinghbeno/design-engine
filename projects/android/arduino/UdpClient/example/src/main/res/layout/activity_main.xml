<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.felhr.serialportexample.MainActivity">

    <EditText
        android:id="@+id/editTextIp"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:layout_alignEnd="@+id/buttonSend4"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="107dp"
        android:ems="10">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextPort"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonSend4"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="46dp"
        android:inputType="number"
        android:ems="10">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="286dp"
        android:text="@string/udp_port"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonSend"
        style="Widget.Button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewTitle2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="-25dp"
        android:text="FORWARD" />

    <Button
        android:id="@+id/buttonSend2"
        style="Widget.Button"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewTitle2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="-26dp"
        android:text="REVERSE" />

    <Button
        android:id="@+id/buttonSend3"
        style="Widget.Button"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/textViewTitle2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="88dp"
        android:text="LEFT" />

    <Button
        android:id="@+id/buttonSend4"
        style="Widget.Button"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/textViewTitle2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="-112dp"
        android:text="RIGHT" />

    <TextView
        android:id="@+id/textViewIPLabel"
        android:layout_width="57dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/editTextIp"
        android:layout_marginEnd="-52dp"
        android:layout_marginBottom="13dp"
        android:layout_toStartOf="@+id/buttonSend2"
        android:text="@string/udp_iplabel" />

    <TextView
        android:id="@+id/textViewPortLabel"
        android:layout_width="67dp"
        android:layout_height="26dp"
        android:layout_alignBottom="@+id/editTextIp"
        android:layout_marginEnd="-51dp"
        android:layout_marginBottom="-52dp"
        android:layout_toStartOf="@+id/buttonSend2"
        android:text="@string/udp_portlabel" />

</RelativeLayout>